# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix line endings for these file types
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.spec text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files should not be normalized
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Treat specific files as binary to prevent diff issues
*.pickle binary
*.pkl binary
*.whl binary